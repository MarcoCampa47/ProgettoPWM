<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutItemRvPaymentTicketsFragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginTop="15dp"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPaymentTicketsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemConstraintLayoutPaymentTicketsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/radius_registration"
            android:padding="14dp">



            <TextView
                android:id="@+id/startHourTextViewRvPaymentTicketsFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toTopOf="@+id/trainTypeTextViewRvPaymentTicketsFragment"
                app:layout_constraintEnd_toStartOf="@+id/arrowImageViewRvPaymentTicketsFragment"
                app:layout_constraintStart_toStartOf="@+id/itemConstraintLayoutPaymentTicketsFragment"
                app:layout_constraintTop_toBottomOf="@+id/startLocationTextViewRvPaymentTicketsFragment" />

            <ImageView
                android:id="@+id/arrowImageViewRvPaymentTicketsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toStartOf="@+id/endHourTextViewRvPaymentTicketsFragment"
                app:layout_constraintStart_toEndOf="@+id/startHourTextViewRvPaymentTicketsFragment"
                app:layout_constraintTop_toBottomOf="@+id/arrowLocationImageViewRvPaymentTicketsFragment"
                app:srcCompat="@drawable/right_arrow" />

            <TextView
                android:id="@+id/endHourTextViewRvPaymentTicketsFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/classNumberTextViewRvPaymentTicketsFragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/arrowImageViewRvPaymentTicketsFragment"
                app:layout_constraintTop_toBottomOf="@id/endLocationTextViewRvPaymentTicketsFragment" />

            <TextView
                android:id="@+id/trainTypeTextViewRvPaymentTicketsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="tipo treno"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startHourTextViewRvPaymentTicketsFragment"

                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="95dp" />

            <TextView
                android:id="@+id/classNumberTextViewRvPaymentTicketsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Numero classe"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/endHourTextViewRvPaymentTicketsFragment" />

            <TextView
                android:id="@+id/availableSeatsTextViewRvPaymentTicketsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Numero posti ancora disponibili: XXX"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trainTypeTextViewRvPaymentTicketsFragment" />

            <TextView
                android:id="@+id/priceTextViewRvPaymentTicketsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Prezzo:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/availableSeatsTextViewRvPaymentTicketsFragment"
                app:layout_constraintTop_toBottomOf="@id/availableSeatsTextViewRvPaymentTicketsFragment"
                tools:layout_constraintStart_toStartOf="@id/aviableSeatsTextViewRvPaymentTicketsFragment" />

            <TextView
                android:id="@+id/startLocationTextViewRvPaymentTicketsFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="StartLocation"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toStartOf="@+id/arrowLocationImageViewRvPaymentTicketsFragment"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/arrowLocationImageViewRvPaymentTicketsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"


                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/startLocationTextViewRvPaymentTicketsFragment"
                app:layout_constraintEnd_toStartOf="@+id/endLocationTextViewRvPaymentTicketsFragment"
                app:srcCompat="@drawable/right_arrow" />

            <TextView
                android:id="@+id/endLocationTextViewRvPaymentTicketsFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="EndLocation"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/arrowLocationImageViewRvPaymentTicketsFragment"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>