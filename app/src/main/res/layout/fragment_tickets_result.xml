<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutPaymentTickesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.ticketsModule.resultModule.TicketsResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarContainerPayamentTicketsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/startLocationTextViewPayamentTicketsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startLocation"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin = "20dp"
            app:layout_constraintBottom_toBottomOf="@+id/topBarContainerPayamentTicketsFragment"
            app:layout_constraintEnd_toStartOf="@+id/arrowTopBarPayamentTicketsFragment"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/topBarContainerPayamentTicketsFragment"
            app:layout_constraintTop_toTopOf="@id/topBarContainerPayamentTicketsFragment">

        </TextView>

        <ImageView
            android:id="@+id/arrowTopBarPayamentTicketsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_margin = "20dp"
            app:layout_constraintStart_toEndOf="@+id/startLocationTextViewPayamentTicketsFragment"
            app:layout_constraintTop_toTopOf="@id/topBarContainerPayamentTicketsFragment"
            app:layout_constraintBottom_toBottomOf="@id/topBarContainerPayamentTicketsFragment"
            app:layout_constraintEnd_toStartOf="@id/endLocationTextViewPayamentTicketsFragment">



        </ImageView>

        <TextView
            android:id="@+id/endLocationTextViewPayamentTicketsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="endLocation"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin = "20dp"
            app:layout_constraintStart_toEndOf="@+id/arrowTopBarPayamentTicketsFragment"
            app:layout_constraintEnd_toEndOf="@id/topBarContainerPayamentTicketsFragment"
            app:layout_constraintTop_toTopOf="@id/topBarContainerPayamentTicketsFragment"
            app:layout_constraintBottom_toBottomOf="@id/topBarContainerPayamentTicketsFragment">


        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFragmentTicketsPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayoutPaymentTickesFragment"
        app:layout_constraintStart_toStartOf="@+id/constraintLayoutPaymentTickesFragment"
        app:layout_constraintTop_toBottomOf="@+id/topBarContainerPayamentTicketsFragment"
        tools:listitem="@layout/item_rv_results_tickets_fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>



